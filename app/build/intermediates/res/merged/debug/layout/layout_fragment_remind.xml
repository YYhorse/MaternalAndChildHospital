<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_production_inspection_remind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <View
                android:id="@+id/view_orange"
                android:layout_width="5dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:background="@color/color_dark_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_orange"
                android:paddingLeft="5dip"
                android:text="孕育进度"
                android:textColor="@color/color_txt_dark_grey"
                android:textSize="@dimen/textsize_30px" />

            <TextView
                android:id="@+id/tv_days_frag_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5dip"
                android:text="距离预产期0天"
                android:textColor="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_26px" />
        </RelativeLayout>

        <com.example.maternalandchildhospital.publics.view.SpringProgressView
            android:id="@+id/spv_frag_remind"
            android:layout_width="match_parent"
            android:layout_height="70dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_divide_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip" >

            <LinearLayout
                android:layout_width="57dip"
                android:layout_height="66dip"
                android:background="@drawable/bg_pregnancy"
                android:orientation="vertical"
                android:padding="10dip" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="7"
                    android:gravity="center|bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_yunweek_frag_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textColor="@color/color_dark_orange"
                        android:textSize="@dimen/textsize_45px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周"
                        android:textColor="@color/color_light_orange"
                        android:textSize="@dimen/textsize_22px" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_remindday_frag_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="45dip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reminddw_frag_remind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日后"
                    android:textColor="@color/color_txt_dark_grey"
                    android:textSize="@dimen/textsize_34px" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_date_frag_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/color_txt_light_grey"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_yuyue_frag_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/corner_text_remind_green_bg"
            android:paddingBottom="5dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="5dip"
            android:text="产检预约"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_34px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@color/color_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <View
                android:layout_width="5dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:background="@color/color_dark_orange" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="5dip"
                android:text="检查项目"
                android:textColor="@color/color_txt_dark_grey"
                android:textSize="@dimen/textsize_30px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_frag_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text=""
            android:textColor="@color/color_txt_dark_grey"
            android:textSize="@dimen/textsize_30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="具体检查项目以实际情况为准"
                android:textColor="@color/red"
                android:textSize="@dimen/textsize_24px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_production_inspection_complete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="10dip"
            android:layout_weight="4"
            android:background="@drawable/bg_complete" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的产检已全部完成\n祝您和宝贝健康快乐！"
                android:textColor="@color/color_txt_dark_grey"
                android:textSize="@dimen/textsize_34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dip"
                android:background="@drawable/corner_text_remind_orange_bg"
                android:padding="10dip"
                android:text="更多产后的提醒功能，敬请期待..."
                android:textColor="@color/color_white"
                android:textSize="@dimen/textsize_34px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="6"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <View
                    android:layout_width="5dip"
                    android:layout_height="20dip"
                    android:background="@color/color_dark_orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:text="产前小贴士"
                    android:textColor="@color/color_txt_dark_grey"
                    android:textSize="@dimen/textsize_30px" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_remind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:divider="@color/transparent"
                android:listSelector="#00000000"
                android:scrollbars="none" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>