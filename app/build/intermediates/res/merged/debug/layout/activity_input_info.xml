<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_1_on" />

            <EditText
                android:id="@+id/et_name_input_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_name_input_info"
                android:layout_toRightOf="@+id/iv_icon_name"
                android:background="@color/color_transparent"
                android:hint="请填写真实姓名"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_name_input_info"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_divide_line"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_2" />

            <EditText
                android:id="@+id/et_id_input_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_id_input_info"
                android:layout_toRightOf="@+id/iv_icon_id"
                android:background="@color/color_transparent"
                android:hint="请填写18位身份证号码"
                android:maxLength="18"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_id_input_info"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_divide_line"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip" />

        <RelativeLayout
            android:id="@+id/rl_community_input_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_3" />

            <TextView
                android:id="@+id/tv_community_input_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_array_community_input_info"
                android:layout_toRightOf="@+id/iv_icon_community"
                android:background="@color/color_transparent"
                android:hint="请选择您所在的社区"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_array_community_input_info"
                android:layout_width="22dip"
                android:layout_height="22dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:src="@drawable/btn_arrow_right" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_confire_input_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_dark_orange"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_38px" />
    </LinearLayout>

</LinearLayout>