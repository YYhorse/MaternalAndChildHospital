<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_7_on" />

            <EditText
                android:id="@+id/et_phonenum_forget_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_phonenum_forget_psw"
                android:layout_toRightOf="@+id/iv_icon_user"
                android:background="@color/color_transparent"
                android:hint="请输入11位手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_phonenum_forget_psw"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_divide_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_code" />

            <EditText
                android:id="@+id/et_code_forget_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_code_forget_psw"
                android:layout_toRightOf="@+id/iv_icon_code"
                android:background="@color/color_transparent"
                android:hint="请输入收到的验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_code_forget_psw"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_get_code_forget_psw"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_get_code_forget_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@drawable/corner_btn_code_bg"
                android:gravity="center"
                android:paddingBottom="3dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="3dip"
                android:text="发送验证码"
                android:textColor="@color/color_green_6cd9d4"
                android:textSize="@dimen/textsize_30px" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_next_forget_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_txt_light_grey"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_38px" />
    </LinearLayout>

</LinearLayout>