<?xml version="1.0" encoding="utf-8"?>
<android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_widthPercent="88%"
        android:background="@drawable/shape_toast_mid_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:gravity="center"
            android:layout_marginTop="10dip" >

            <TextView
                android:id="@+id/enterCancel_dialog_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提示"
                android:textColor="@color/color_txt_dark_grey"
                android:textSize="@dimen/textsize_40px" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_marginBottom="10dip" >

            <TextView
                android:id="@+id/enterCancel_dialog_tv_infoLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="客服电话："
                android:textColor="@color/color_txt_dark_grey"
                android:textSize="@dimen/textsize_30px" />

            <TextView
                android:id="@+id/enterCancel_dialog_tv_infoRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/enterCancel_dialog_tv_infoLeft"
                android:text="021-88888888"
                android:textColor="@color/color_main_theme"
                android:textSize="@dimen/textsize_30px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/color_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/enterCancel_dialog_tv_left"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="呼叫"
                android:textColor="@color/color_main_theme"
                android:textSize="@dimen/textsize_40px" />

            <View
                android:id="@+id/enterCancel_dialog_view_line"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:background="@color/color_divide_line" />

            <TextView
                android:id="@+id/enterCancel_dialog_tv_right"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_main_theme"
                android:textSize="@dimen/textsize_40px" />
        </LinearLayout>
    </LinearLayout>

</android.percent.support.PercentRelativeLayout>