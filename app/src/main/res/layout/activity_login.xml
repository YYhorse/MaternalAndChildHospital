<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_user" />

            <EditText
                android:id="@+id/et_phonenum_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_phonenum_login"
                android:layout_toRightOf="@+id/iv_icon_user"
                android:background="@color/color_transparent"
                android:hint="请输入11位手机号码"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_phonenum_login"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@color/color_divide_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="8dip" >

            <ImageView
                android:id="@+id/iv_icon_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_psw" />

            <EditText
                android:id="@+id/et_psw_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toLeftOf="@+id/iv_del_psw_login"
                android:layout_toRightOf="@+id/iv_icon_psw"
                android:background="@color/color_transparent"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/color_txt_dark_grey"
                android:textColorHint="@color/color_txt_light_grey"
                android:textSize="@dimen/textsize_30px" />

            <ImageView
                android:id="@+id/iv_del_psw_login"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_delete_gray"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_txt_light_grey"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="登录"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_38px" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/tv_forget_psw_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_shu_login"
            android:layout_centerVertical="true"
            android:text="忘记密码？"
            android:textColor="@color/color_txt_dark_grey"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_shu_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_register_login"
            android:layout_centerVertical="true"
            android:text="|"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="5dip"
            android:textColor="@color/color_txt_dark_grey"
            android:textSize="@dimen/textsize_34px" />

        <TextView
            android:id="@+id/tv_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="新注册"
            android:textColor="@color/color_txt_dark_grey"
            android:textSize="@dimen/textsize_34px" />
    </RelativeLayout>

</LinearLayout>