<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <include layout="@layout/layout_title_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_1"
        android:background="@color/color_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_margin_20"
        android:layout_marginLeft="@dimen/layout_margin_15"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_15"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_old_psw"
            android:layout_width="@dimen/layout_margin_30"
            android:layout_height="@dimen/layout_margin_30"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_psw" />

        <EditText
            android:id="@+id/et_old_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_5"
            android:layout_toLeftOf="@+id/iv_del_old_psw"
            android:layout_toRightOf="@+id/iv_old_psw"
            android:background="@color/color_transparent"
            android:inputType="textPassword"
            android:hint="请输入旧密码"
            android:singleLine="true"
            android:textColor="@color/color_txt_dark_grey"
            android:textColorHint="@color/color_txt_light_grey"
            android:textSize="@dimen/textsize_30px" />

        <ImageView
            android:id="@+id/iv_del_old_psw"
            android:layout_width="@dimen/layout_margin_16"
            android:layout_height="@dimen/layout_margin_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_delete_gray"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_1"
        android:layout_marginLeft="@dimen/layout_margin_48"
        android:background="@color/color_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_margin_20"
        android:layout_marginLeft="@dimen/layout_margin_15"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_15"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_new_psw"
            android:layout_width="@dimen/layout_margin_30"
            android:layout_height="@dimen/layout_margin_30"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_13" />

        <EditText
            android:id="@+id/et_new_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_5"
            android:layout_toLeftOf="@+id/iv_del_new_psw"
            android:layout_toRightOf="@+id/iv_new_psw"
            android:background="@color/color_transparent"
            android:inputType="textPassword"
            android:hint="请输入新密码"
            android:singleLine="true"
            android:textColor="@color/color_txt_dark_grey"
            android:textColorHint="@color/color_txt_light_grey"
            android:textSize="@dimen/textsize_30px" />

        <ImageView
            android:id="@+id/iv_del_new_psw"
            android:layout_width="@dimen/layout_margin_16"
            android:layout_height="@dimen/layout_margin_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_delete_gray"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_1"
        android:layout_marginLeft="@dimen/layout_margin_48"
        android:background="@color/color_divide_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/layout_margin_20"
        android:layout_marginLeft="@dimen/layout_margin_15"
        android:layout_marginRight="@dimen/layout_margin_20"
        android:layout_marginTop="@dimen/layout_margin_15"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_new_psw_2"
            android:layout_width="@dimen/layout_margin_30"
            android:layout_height="@dimen/layout_margin_30"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_14" />

        <EditText
            android:id="@+id/et_new_psw_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin_5"
            android:layout_toLeftOf="@+id/iv_del_new_psw_2"
            android:layout_toRightOf="@+id/iv_new_psw_2"
            android:background="@color/color_transparent"
            android:inputType="textPassword"
            android:hint="请再次输入新密码"
            android:singleLine="true"
            android:textColor="@color/color_txt_dark_grey"
            android:textColorHint="@color/color_txt_light_grey"
            android:textSize="@dimen/textsize_30px" />

        <ImageView
            android:id="@+id/iv_del_new_psw_2"
            android:layout_width="@dimen/layout_margin_16"
            android:layout_height="@dimen/layout_margin_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_delete_gray"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_margin_1"
        android:layout_marginLeft="@dimen/layout_margin_48"
        android:background="@color/color_divide_line" />

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_15"
        android:layout_marginRight="@dimen/layout_margin_15"
        android:layout_marginTop="@dimen/layout_margin_15"
        android:background="@color/color_dark_orange"
        android:gravity="center"
        android:paddingBottom="@dimen/layout_margin_16"
        android:paddingTop="@dimen/layout_margin_16"
        android:text="确认修改"
        android:textColor="@color/color_white"
        android:textSize="@dimen/textsize_32px" />

</LinearLayout>